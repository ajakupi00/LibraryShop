@model WebApplication1.Models.User

@{
    ViewBag.Title = "Login";
    string email = ViewBag.EmailSent as string;
    string msg = ViewBag.msg as string;
}

@if (email == "true")
{
    <div class="alert alert-info" role="alert">
        Check your email, confirmation link was sent!
    </div>
}
else if (msg != null)
{
    <div class="alert alert-info" role="alert">
        @msg
    </div>
}

<div class="d-flex align-content-center justify-content-center">
    <div class="w-50 d-flex flex-column p-5">
        <h2>Login</h2>
        @using (Html.BeginForm("Login", "Account", FormMethod.Get, new { @class = "d-flex flex-column align-content-center justify-content-center" }))
        {
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control w-100 my-2" })
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control w-100 my-2" />
            <button type="submit" class="btn btn-primary">Submit</button>
        }

        @Html.ActionLink("Forgot password?", "PasswordRecovery", null, new { @class = "my-3 text-black" })
        <div>
            <span>Don't have an account?</span>
            @Html.ActionLink("Register", "Register", null, new { @class = "d-inline text-blue fw-bold text-decoration-none " })
        </div>


    </div>
</div>
