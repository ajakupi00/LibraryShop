@{
    ViewBag.Title = "PasswordRecovery";
    string msg = ViewBag.msg as string;
}

@if (msg != null)
{
    <div class="alert alert-danger" role="alert">
        @msg
    </div>
}

<div class="d-flex align-content-center justify-content-center">
    <div class="w-50 d-flex flex-column p-5">
        <h2>Recover password</h2>
        @using (Html.BeginForm("PasswordRecovery", "Account", FormMethod.Post, new { @class = "d-flex flex-column align-content-center justify-content-center" }))
        {
            <label class="form-label">Enter your email:</label>
            <input type="email" name="email" class="form-control" />
            <button type="submit" class="btn btn-primary my-4">Submit</button>
        }
        @Html.ActionLink("Return back", "Login", null, new { @class = "text-blue fw-bold text-decoration-none" })
    </div>
</div>