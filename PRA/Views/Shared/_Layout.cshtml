@using WebApplication1.Models
@{
    User user = (User)Session["user"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script src="https://cdn.jsdelivr.net/npm/typed.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid justify-content-around">
            @Html.ActionLink("Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white fs-3" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "d-flex justify-content-center w-50" }))
            {
                <input class="form-control me-2" name="search" type="search" placeholder="Search by title or author" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            }
            <div class="d-flex" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @if (user is null)
                        {
                            @Html.ActionLink("Login", "Login", "Account", null, new { @class = "nav-link" })
                        }
                        else
                        {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-decoration-none text-warning fw-bold" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @user.FirstName
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>@Html.ActionLink("Dashboard", "Index", "Account", null, new { @class = "dropdown-item" })</li>
                                <li><hr class="dropdown-divider"></li>
                                @if (!user.IsAdmin)
                                {
                                    <li>@Html.ActionLink("Loans", "Loans", "Account", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Purchases", "Purchases", "Account", null, new { @class = "dropdown-item" })</li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                <li>@Html.ActionLink("Log out", "LogOut", "Account", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>

                    }
                    </ul>

                </div>
            </div>
        </nav>
        <div class="m-2 body-content">
            @RenderBody()
            <hr />
            <footer class="mw-100 d-flex justify-content-around position-relative bottom-0 p-3" style="width: 100vw;height: 75px; border-top: 1px solid #ccc">
                <div class="d-flex flex-column">
                    <span>Adresa 10, 10 000 Zagreb</span>
                    <span>Matični broj: HR53865349990​</span>
                </div>
                <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">Contact Us</button>
                <div class="d-flex flex-column">
                    <a href="mailto: knjiznica@mail.hr">knjiznica@mail.hr</a>
                    <span>Tel: 051 221 983​</span>
                </div>
            </footer>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    @using (Html.BeginForm("Contact", "Library", null, FormMethod.Post, null))
                    {
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Contact Us</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body d-flex flex-column">
                            <div class="d-flex flex-column">
                                <label>Full name:</label>
                                <input name="fname" class="form-control" />
                            </div>
                            <div class="d-flex flex-column">
                                <label>Email:</label>
                                <input name="email" class="form-control" type="email" />
                            </div>
                            <div class="d-flex flex-column">
                                <label>Title:</label>
                                <input name="title" class="form-control" />
                            </div>
                            <div class="d-flex flex-column">
                                <label>Message:</label>
                                <textarea name="message" style="height: 300px;" class="form-control"></textarea>
                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary px-4">Yes</button>

                        </div>
                    }

                </div>
            </div>
        </div>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </body>
</html>

